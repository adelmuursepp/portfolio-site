.relative
  %iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d51178.306360275055!2d-76.30410100657949!3d36.707088208398716!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89babad491ca42f1%3A0xb9c6dfc200391ca4!2sGreat+Bridge%2C+Chesapeake%2C+VA!5e0!3m2!1sen!2sus!4v1506710212686" frameborder="0" style="border:0; filter: grayscale(1); z-index: -2;" width="100%" height="400" allowfullscreen)
  .overlay.overlay--short.overlay--dark-color
  .container.generic-content-container
    %h1.section-title= "Contact Me"
    %p= "I am available for full-time or contract work with the right company. Contact me if your users are your passion and you think we might work well together."
    .page-section
      = form_for @message, :url => create_message_url do |f|
        %div
          = f.label :name
          = f.text_field :name, :autofocus => true
        %div
          = f.label :email
          = f.email_field :email
        %div
          = f.label :subject
          = f.text_field :subject
        %div
          = f.label :body
          = f.text_area :body
        %div
          = f.submit "Send Message"
        