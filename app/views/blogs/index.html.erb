<p id="notice"><%= notice %></p>

<h1><%= @page_title %></h1>
<% @blogs.each do |blog| %>
  <h2><%= blog.title %></h2>
  <p><%= blog.created_at %></p>
  <p><%= link_to blog.status, toggle_status_blog_path(blog) %></p>
  <div><%= blog.body %></div>
  <p><%= link_to 'Show More', blog %></p>
  <p><%= link_to 'Edit', edit_blog_path(blog) %></p>
  <p><%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure you want to delete that post?' } %></p>
<% end %>

<br>

<%= link_to 'New Post', new_blog_path %>
