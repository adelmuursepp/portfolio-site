<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= alert_generator(error, :error, "Error") %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, 'Publish Date' %>
    <%= f.date_field :created_at, class: 'form-control' %>
  </div>

  <div>
    <%= f.collection_radio_buttons :status, Blog.statuses, :first, :first do |button| %>
      <%= button.label(class: "custom-control custom-radio") { button.radio_button(class: "custom-control-input") + '<span class="custom-control-indicator"></span><span class="custom-control-description">'.html_safe + button.text + '</span>'.html_safe } %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.collection_select :topic_id, Topic.all, :id, :title, { :prompt => 'Please select a topic' }, class: 'custom-select', 'aria-label': 'Topic' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 15 %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
