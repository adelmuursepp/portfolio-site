<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-2">
        <%= gravatar_helper comment.user %>
        </div>

        <div class="col-10">
          <div class="row">
            <div class="col-12">
              <%= comment.content %>
            </div>
          </div>
          <div class="row">
            <div class="col-12 comment-attribution">
              Posted by <strong><%= comment.user.name %></strong> <%= time_ago_in_words(comment.created_at) %> ago
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>