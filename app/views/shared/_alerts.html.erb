<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], image: :warning, title: "Alert", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], image: :error, title: "Error", sticky: false) %>
<% elsif flash[:notice] %>
  <%= js add_gritter(flash[:notice], image: :notice, title: "Notice", sticky: false) %>
<% end %>