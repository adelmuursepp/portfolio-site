<div class="container">
    <div class="row">
        <div class="col-md-7">
            <%= image_tag @portfolio_item.main_image %>
        </div>
        <div class="col-md-5">
            <h2><%= @portfolio_item.title %></h2>
            <hr>
            <p><em><%= @portfolio_item.subtitle %></em></p>
            <p><%= @portfolio_item.body %></p>
            <hr>
            <h3>Technologies Used:</h3>
            <% @portfolio_item.technologies.each do |technology| %>
                <p><%= technology.name %></p>
            <% end %>
        </div>
    </div>
</div>