<%= form_for(@portfolio_item) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label "Main Image URL" %>
        <%= f.file_field :main_image, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label "Thumbnail Image URL" %>
        <%= f.file_field :thumb_image, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', rows: 13 %>
      </div>
    </div>
    <div class="col-md-12">

      <hr>

      <h2 class="text-center">Technologies used:</h2>

      <div>
        <%= f.fields_for :technologies do |technology_form| %>
          <%= render 'technology_fields', f: technology_form %>
        <% end %>
        <div class="form-group">
          <%= link_to_add_association 'Add Technology', f, :technologies, class: "btn btn-info col-3" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </div>
<% end %>